ⲂⲈϨⲀⲨⲒⲞⲢ init_storage {
    ⲄⲒⲨⲈⲚ: Directory path and settings
    ⲰϨⲈⲚ: VBT storage is initialized
    ⲦϨⲈⲚ: Creates .tvc repository and config index
}

ⲂⲈϨⲀⲨⲒⲞⲢ create_config {
    ⲄⲒⲨⲈⲚ: Config name and initial data
    ⲰϨⲈⲚ: New versioned config is created
    ⲦϨⲈⲚ: Creates VBTConfig with genesis commit
}

ⲂⲈϨⲀⲨⲒⲞⲢ get_config_value {
    ⲄⲒⲨⲈⲚ: config_id, section, key
    ⲰϨⲈⲚ: Reading value from config
    ⲦϨⲈⲚ: Decodes TritStream and returns value
}

ⲂⲈϨⲀⲨⲒⲞⲢ set_config_value {
    ⲄⲒⲨⲈⲚ: config_id, section, key, new value
    ⲰϨⲈⲚ: Config is updated
    ⲦϨⲈⲚ: Creates TritDiff, applies change, creates commit
}

ⲂⲈϨⲀⲨⲒⲞⲢ commit_config {
    ⲄⲒⲨⲈⲚ: config_id and message
    ⲰϨⲈⲚ: Config state is committed
    ⲦϨⲈⲚ: Creates VBTCommit with diff from parent
}

ⲂⲈϨⲀⲨⲒⲞⲢ checkout_config {
    ⲄⲒⲨⲈⲚ: config_id and commit_id
    ⲰϨⲈⲚ: Config version is switched
    ⲦϨⲈⲚ: Reconstructs state from diff chain
}

ⲂⲈϨⲀⲨⲒⲞⲢ get_config_history {
    ⲄⲒⲨⲈⲚ: config_id
    ⲰϨⲈⲚ: History is requested
    ⲦϨⲈⲚ: Returns VBTHistory with commit chain
}

ⲂⲈϨⲀⲨⲒⲞⲢ create_branch {
    ⲄⲒⲨⲈⲚ: config_id, branch name, base_commit
    ⲰϨⲈⲚ: Config branch is created
    ⲦϨⲈⲚ: Creates VBTBranch pointing to base
}

ⲂⲈϨⲀⲨⲒⲞⲢ merge_branches {
    ⲄⲒⲨⲈⲚ: config_id, source_branch, target_branch
    ⲰϨⲈⲚ: Branches are merged
    ⲦϨⲈⲚ: Performs ternary merge with conflict resolution
}

ⲂⲈϨⲀⲨⲒⲞⲢ compress_config_history {
    ⲄⲒⲨⲈⲚ: config_id and compression settings
    ⲰϨⲈⲚ: History is compressed
    ⲦϨⲈⲚ: Aggregates old commits, recalculates diffs
}

ⲂⲈϨⲀⲨⲒⲞⲢ export_config {
    ⲄⲒⲨⲈⲚ: config_id and format (vbt/json/yaml)
    ⲰϨⲈⲚ: Config is exported
    ⲦϨⲈⲚ: Converts from TritStream to target format
}

ⲂⲈϨⲀⲨⲒⲞⲢ import_config {
    ⲄⲒⲨⲈⲚ: File path and config_id
    ⲰϨⲈⲚ: Config is imported
    ⲦϨⲈⲚ: Encodes to TritStream and saves with genesis commit
}

