ⲂⲈϨⲀⲨⲒⲞⲢ open_tri_file {
    ⲄⲒⲨⲈⲚ: File path and mode (read or write)
    ⲰϨⲈⲚ: Opening a .tri file
    ⲦϨⲈⲚ: Returns FileHandle or IOError
}

ⲂⲈϨⲀⲨⲒⲞⲢ read_tri_header {
    ⲄⲒⲨⲈⲚ: FileHandle
    ⲰϨⲈⲚ: Reading the .tri file header
    ⲦϨⲈⲚ: Returns TriHeader with magic TRI, version, and body length
}

ⲂⲈϨⲀⲨⲒⲞⲢ write_tri_header {
    ⲄⲒⲨⲈⲚ: FileHandle and TriHeader
    ⲰϨⲈⲚ: Writing the .tri file header
    ⲦϨⲈⲚ: Writes magic TRI, version, and body length to file
}

ⲂⲈϨⲀⲨⲒⲞⲢ read_tri_body {
    ⲄⲒⲨⲈⲚ: FileHandle and body length
    ⲰϨⲈⲚ: Reading the .tri file body
    ⲦϨⲈⲚ: Returns TritStream with body trits
}

ⲂⲈϨⲀⲨⲒⲞⲢ write_tri_body {
    ⲄⲒⲨⲈⲚ: FileHandle and TritStream
    ⲰϨⲈⲚ: Writing the .tri file body
    ⲦϨⲈⲚ: Writes trit stream to file
}

ⲂⲈϨⲀⲨⲒⲞⲢ read_tri_file {
    ⲄⲒⲨⲈⲚ: File path
    ⲰϨⲈⲚ: Reading a complete .tri file
    ⲦϨⲈⲚ: Returns TriFile with header and body
}

ⲂⲈϨⲀⲨⲒⲞⲢ write_tri_file {
    ⲄⲒⲨⲈⲚ: File path and TriFile
    ⲰϨⲈⲚ: Writing a complete .tri file
    ⲦϨⲈⲚ: Writes header and body to file
}

ⲂⲈϨⲀⲨⲒⲞⲢ close_tri_file {
    ⲄⲒⲨⲈⲚ: FileHandle
    ⲰϨⲈⲚ: Closing a .tri file
    ⲦϨⲈⲚ: Flushes buffers and closes file
}

ⲂⲈϨⲀⲨⲒⲞⲢ validate_tri_header {
    ⲄⲒⲨⲈⲚ: TriHeader
    ⲰϨⲈⲚ: Validating the .tri file header
    ⲦϨⲈⲚ: Returns true if magic is TRI and version is supported
}

ⲂⲈϨⲀⲨⲒⲞⲢ encode_string_to_trits {
    ⲄⲒⲨⲈⲚ: String
    ⲰϨⲈⲚ: Encoding a string to trit stream
    ⲦϨⲈⲚ: Returns TritStream with 5 trits per character
}

ⲂⲈϨⲀⲨⲒⲞⲢ decode_trits_to_string {
    ⲄⲒⲨⲈⲚ: TritStream
    ⲰϨⲈⲚ: Decoding a trit stream to string
    ⲦϨⲈⲚ: Returns String from trit stream
}

ⲂⲈϨⲀⲨⲒⲞⲢ create_tri_header {
    ⲄⲒⲨⲈⲚ: Body length and optional version
    ⲰϨⲈⲚ: Creating a new .tri file header
    ⲦϨⲈⲚ: Returns TriHeader with magic TRI, version, and body length
}

ⲂⲈϨⲀⲨⲒⲞⲢ get_tri_file_size {
    ⲄⲒⲨⲈⲚ: File path
    ⲰϨⲈⲚ: Getting the size of a .tri file
    ⲦϨⲈⲚ: Returns file size in bytes
}

