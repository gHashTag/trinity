{
  "manifest_version": 2,
  "name": "NeoDetect Anti-Detect",
  "version": "2.0.0",
  "description": "Advanced antidetect browser with WASM-powered fingerprint protection. Canvas, WebGL, Audio, Navigator spoofing. Cross-OS emulation.",
  "homepage_url": "https://github.com/gHashTag/trinity",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "neodetect@trinity.dev",
      "strict_min_version": "109.0"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "NeoDetect"
  },
  
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>",
    "alarms"
  ],
  
  "web_accessible_resources": [
    "wasm/*",
    "wasm/neodetect.wasm",
    "wasm/neodetect-loader.js",
    "content/inject.js"
  ],
  
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
}
