{
  "manifest_version": 3,
  "name": "NeoDetect Anti-Detect",
  "version": "2.0.0",
  "description": "Advanced antidetect browser with WASM-powered fingerprint protection. Canvas, WebGL, Audio, Navigator spoofing. Cross-OS emulation.",
  "homepage_url": "https://github.com/gHashTag/trinity",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "NeoDetect"
  },
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["wasm/*", "wasm/neodetect.wasm", "wasm/neodetect-loader.js", "content/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
